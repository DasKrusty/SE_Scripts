CustomWriteNew to TPG-2 Hydrogen Engine = "Standby Mode"
if 
}

@connector
{
    if onoff of TPG-2 Hinge Connector = off{
        OnOff_On TPG-2 Hinge Connector
        attach TPG-2 Hinge Connector
    }
}

@doors
{
    writenew to Debug LCD = Opening Doors
    OnOff_On TPG-2 Light Panel Interior
    delay 1000
    Velocity of TPG-2 Hinge Door = -5
    delay 7000
    writenew to Debug LCD = Closing Doors
    Velocity of TPG-2 Hinge Door = 5
    delay 7000
    OnOff_Off TPG-2 Light Panel Interior
    Velocity of TPG-2 Hinge Door = 0
}



