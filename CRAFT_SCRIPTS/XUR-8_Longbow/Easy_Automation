@onelock
{
    if On/Off of XUR-8 Merge Bay One = On
    {
        WriteNew to XUR-8 Debug LCD = Bay One Unlock
        OnOff_Off XUR-8 Merge Bay One
        Unlock XUR-8 Connector Main
    }
    else if On/Off of XUR-8 Merge Bay One = Off
    {
        WriteNew to XUR-8 Debug LCD = Bay One Lock
        OnOff_On XUR-8 Merge Bay One
        Lock XUR-8 Connector Main
    }
    
    
    OnOff_On XUR-8 Merge Bay One
    Lock XUR-8 Connector Bay One
}

@oneunlock
{
    OnOff_Off XUR-8 Merge Bay One
    Unlock XUR-8 Connector Bay One
}

@twolock
{
    OnOff_On XUR-8 Merge Bay Two
    Lock XUR-8 Connector Bay Two
}

@twounlock
{
    OnOff_Off XUR-8 Merge Bay Two
    Unlock XUR-8 Connector Bay Two
}

@threelock
{
    OnOff_On XUR-8 Merge Bay Three
    Lock XUR-8 Connector Bay Three
}

@threeunlock
{
    OnOff_Off XUR-8 Merge Bay Three
    Unlock XUR-8 Connector Bay Three
}

@fourlock
{
    OnOff_On XUR-8 Merge Bay Four
    Lock XUR-8 Connector Bay Four
}

@fourunlock
{
    OnOff_Off XUR-8 Merge Bay Four
    Unlock XUR-8 Connector Bay Four
}